# Please read the corosync.conf.5 manual page
totem {
  version: 2
  nodeid: <%= node['nodeid'] || node['hostname'] %>
  secauth: on
  threads: 4
  interface {
    ringnumber: 0
    bindnetaddr: <%= node['corosync']['bindnetaddr'] %>
    mcastport: 5405
    ttl: 1
  }
  token: 5000
  token_retransmits_before_loss_const: 20
  join: 1000
  consensus: 10000
  transport: udpu
}

nodelist {
<% node['corosync']['members'].each do |nid, member| %>
  node {
    nodeid: <%= nid %>
    ring0_addr: <%= member %>
  }
<% end %>
}

logging {
  fileline: off
  to_stderr: no
  to_logfile: no
  to_syslog: yes
  debug: off
  timestamp: on
  logger_subsys {
    subsys: AMF
    debug: off
  }
}
